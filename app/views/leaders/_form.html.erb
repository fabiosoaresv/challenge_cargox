<%= stylesheet_link_tag "application" %>
<%= form_tag leaders_update_path, method: :post do %>
  <% @leader.each do |name, value| %>
    <div>
      <%= label_tag name %>
      <%= text_field_tag "#{name}]", value %>
    </div>
  <% end %>
  <br>
  <%= submit_tag 'Atualizar', class: 'btn-primary pull-right' %>
<% end %>




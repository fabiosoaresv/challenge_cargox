<%= stylesheet_link_tag "application" %>
<div class="smart-green">
    <h1 class='display-4 my-5'>Criar novo coordenador </h1>
    <hr>

<%= form_tag coordinators_create_path, method: :post do %>
  <div class="form-group row">
    <div class="col-sm-12 col-md-2">
      <%= label_tag 'coordinator[name]', 'Nome:', class: 'control-label' %>
    </div>
    <div class="col-sm-12 col-md-10">
      <%= text_field_tag 'coordinator[name]', params[:coordinator].try(:[], 'name'), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-12 col-md-2">
      <%= label_tag 'coordinator[surname]', 'Sobrenome:', class: 'control-label' %>
    </div>
    <div class="col-sm-12 col-md-10">
      <%= text_field_tag 'coordinator[surname]', params[:coordinator].try(:[], 'name'), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-12 col-md-2">
      <%= label_tag 'coordinator[age]', 'Idade:', class: 'control-label' %>
    </div>
    <div class="col-sm-12 col-md-10">
      <%= text_field_tag 'coordinator[age]', params[:coordinator].try(:[], 'age'), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-12 col-md-2">
      <%= label_tag 'coordinator[hired_at]', 'Contratado em:', class: 'control-label' %>
    </div>
    <div class="col-sm-12 col-md-10">
      <%= text_field_tag(
        'coordinator[hired_at]',
        params[:coordinator].try(:[], 'hired_at'),
        class: 'form-control datepicker',
        placeholder: 'DD/MM/AAAA'
      )%>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :system, 'Líder:' %>
    <%= select_tag(
      'coordinator[leader_name]',
      options_for_select(@leaders.map { |leader| leader['name']}),
      prompt: 'Selecione um Líder',
      class: 'form-control type_select'
    ) %>
  </div>

  <br>
  <div class="form-group row">
    <div class="col-sm-12 col-md-12">
      <%= submit_tag 'Criar', class: 'btn btn-primary pull-right' %>
    </div>
    <br>
    <a href='/companies'><span class="button-back">Voltar</span></a>
  </div>
<% end %>
</div>

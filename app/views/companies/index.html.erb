<%= stylesheet_link_tag "application" %>
<div class="smart-green">
  <h1>Empresas</h1>

  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>CNPJ</th>
        <th>Fundado em</th>
        <th>Fundador (ID)</th>
        <th colspan="2">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= company['name'] %></td>
          <td><%= company['cnpj'] %></td>
          <td><%= company['foundation'] %></td>
          <td><%= company['foundatorId'] %> </td>
          <td><%= link_to 'Editar', edit_company_path(company['cnpj']) %></td>
          <td><%= link_to "Deletar", Company.where(cnpj: company['cnpj']).first, method: "delete" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br><br>
  <a href='/companies/new'><span class="button-send">Novo</span></a>
  <a href='/'><span class="button-back">Voltar</span></a>
</div>
